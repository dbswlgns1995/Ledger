<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.ledger">

    <application
        android:allowBackup="true"
        android:icon="@drawable/accounting"
        android:label="@string/app_name"
        android:roundIcon="@drawable/accounting"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.jihoonyoon.ledger.QnAActivity"
            android:theme="@style/Theme.MyDialog"/>
        <activity
            android:name="com.jihoonyoon.ledger.AddActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name="com.jihoonyoon.ledger.IncomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jihoonyoon.ledger.ExpendActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.jihoonyoon.ledger.SelectActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity
            android:name="com.jihoonyoon.ledger.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>